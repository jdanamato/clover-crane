<style><meta name="viewport"content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
  /* Make text look crisper and more legible in all browsers */
  body {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-smoothing: antialiased;
    text-rendering: optimizeLegibility;
  }
  /* Removes top margin on first element in any rich text element */
  .w-richtext> :not(div):first-child,
  .w-richtext>div:first-child> :first-child {
    margin-top: 0 !important;
  }
  /* Removes bottom margin on last element in any rich text element */
  .w-richtext>:last-child,
  .w-richtext ol li:last-child,
  .w-richtext ul li:last-child {
    margin-bottom: 0 !important;
  }
  /* Adds an ellipsis after 3 lines of text */
  .text-clamp-3 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
  }
  /* Adds an ellipsis after 2 lines of text */
  .text-clamp-2 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
  /* Adds an ellipsis after 1 line of text */
  .text-clamp-1 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
  }
  input, textarea, meter, progress, button, select {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    border-radius: 0;
    background-image: none;
  	}
  /* Remove native spinner buttons for type="number" inputs */
  input[type=number]::-webkit-inner-spin-button,
  input[type=number]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
    }
  input[type=number] {
    -moz-appearance: textfield;
    }
  .input-wrap:focus-within {
  	outline color: var(--_color---blue--9);
		outline offset: 0.1rem;
		outline style: solid;
		outline width: 0.1rem;
    }
  /* Liquify/Shopify */
  [li-cloak_disabled="hide"]  { 
  	display: none !important; 
    }
  [x-cloak] { 
  	display: none !important; 
    }
</style>
